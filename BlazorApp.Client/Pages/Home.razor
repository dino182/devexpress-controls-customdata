@page "/"
@inject ApiClient ApiClient

<PageTitle>Home</PageTitle>

<DxComboBox TData="Item"
            TValue="int"
            CustomData="@ApiClient.GetItems"
            @bind-Value="@_item"
            TextFieldName="@nameof(Item.Text)"
            ValueFieldName="@nameof(Item.Value)"
            FilteringMode="@DataGridFilteringMode.Contains" />

<DxTagBox TData="Item"
          TValue="int"
          CustomData="@ApiClient.GetItems"
          @bind-Values="@_items"
          TextFieldName="@nameof(Item.Text)"
          ValueFieldName="@nameof(Item.Value)"
          FilteringMode="@DataGridFilteringMode.Contains" />

@code
{
    private int _item;
    private IEnumerable<int> _items;
}
